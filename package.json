{
    "name": "noted",
    "version": "1.0.0",
    "description": "A simple notes application built with GTK4 and Adwaita",
    "main": "index.js",
    "author": "devklick",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/github/noted-gtk/issues"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.3"
    },
    "type": "module",
    "private": true,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:app": "vite build && cp src/io.github.devklick.noted.js dist/io.github.devklick.noted.js && cp src/io.github.devklick.noted.src.gresource.xml dist/io.github.devklick.noted.src.gresource.xml && cp src/meson.build dist/meson.build",
        "build": "npm run build:app",
        "start:app": "cross-env NOTED_DEV=1 XDG_DATA_DIRS=$(pwd)/.compiled-schemas:${XDG_DATA_DIRS} gjs -m dist/main.js",
        "debug:app": "cross-env NOTED_DEV=1 GTK_DEBUG=interactive gjs -m dist/main.js",
        "start": "npm run build && npm run start:app",
        "validate": "npm run validate:types",
        "validate:types": "tsc --noEmit",
        "clear": "rm -rf dist",
        "compile-schemas": "mkdir -p .compiled-schemas/glib-2.0/schemas && glib-compile-schemas data/gschemas --targetdir .compiled-schemas/glib-2.0/schemas"
    },
    "keywords": [],
    "dependencies": {
        "@girs/adw-1": "^1.8.0-4.0.0-beta.23",
        "@girs/gio-2.0": "^2.84.0-4.0.0-beta.23",
        "@girs/gjs": "^4.0.0-beta.23",
        "@girs/glib-2.0": "^2.84.0-4.0.0-beta.23",
        "@girs/gst-1.0": "^1.24.12-4.0.0-beta.23",
        "@girs/gtk-4.0": "^4.18.3-4.0.0-beta.23",
        "@girs/pango-1.0": "^1.56.4-4.0.0-beta.23"
    }
}
